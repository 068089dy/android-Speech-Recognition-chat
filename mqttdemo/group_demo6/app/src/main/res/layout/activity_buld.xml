<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:switch="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dy.group_demo6.activity.Control.buldActivity"
    android:weightSum="1">

    <ImageView
        android:id="@+id/light"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="0.51"
        android:src="@drawable/lightb" />

    <com.example.dy.group_demo6.view.ToggleButton

        android:id="@+id/btn_buld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        switch:checked="false"
        switch:duration="300"
        switch:spotOffColor="#e0e0e0"
        switch:switchOffColor="#3C4145"
        switch:switchOffStrokeColor="#000000"
        switch:spotPadding="6dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />

</LinearLayout>
