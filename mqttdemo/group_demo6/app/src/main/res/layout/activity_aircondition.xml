<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context="com.example.dy.group_demo6.activity.Control.airconditionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="157dp"
        android:background="#b9a3a3"
        android:layout_weight="0.18">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/tv_mode"
            android:text="模式："
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_temp"
            android:text="17"
            android:textSize="150dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:text="风速:"
            android:id="@+id/tv_windspeed"
            android:gravity="clip_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

            <TextView
                android:text="c"
                android:textSize="50dp"
                android:id="@+id/c"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="o"
                android:layout_toLeftOf="@+id/c"

                android:layout_width="20dp"
                android:layout_height="20dp"/>

    </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.72"
        android:orientation="vertical"
        android:weightSum="1">
        <LinearLayout
            android:id="@+id/tem"
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="70dp"
                android:id="@+id/iv_aira"
                android:layout_height="70dp"
                android:paddingRight="10dp"
                android:src="@drawable/airb" />

            <ImageView
                android:id="@+id/iv_airb"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:paddingLeft="10dp"
                android:src="@drawable/aira" />

            </LinearLayout>
        <LinearLayout
            android:layout_toEndOf="@+id/tem"

            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_windspeed"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="风速"
                android:paddingLeft="20dp"/>
            <Button
                android:id="@+id/btn_mode"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="模式"
                android:paddingLeft="20dp"/>
            </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/offon"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_weight="1"
            android:id="@+id/btn_sure"
            android:text="确定"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
